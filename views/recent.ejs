<head>
    
<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://unpkg.com/masonry-layout@4/dist/masonry.pkgd.min.js"></script>
    
    <style>
          body   { padding-top:80px; word-wrap:break-word; background-image: url("http://www.designbolts.com/wp-content/uploads/2013/02/Carbonfiber-semi-dark-Grey-Seamless-Pattern-For-Website-Background.jpg"); opacity: 60% }
          a {font-size: 30px;  padding: 10px 10px 10px 10px; color: black; margin-top: 50px; }
          .title {background-color: gray; opacity: 80%; border-radius: 30px; color: white; margin-bottom: 30px;}
          h1 {font-size: 100px; margin-top: 20px; margin-bottom: 0px;}
          h2 {margin-top: 10px; font-size: 25px;}
          .pagehead {font-size: 50px; margin-top: 20px; padding-bottom: 10px; opacity: 40%; color: white; border-bottom: 5px; border-color: black;}
          .grid {max-width:1200px}
          .grid-item {  width: 400px; float:left; display: block; padding: 7px; }
          .grid-item img { padding:10px; width: 400px; }
    </style>
    
    </head>
    
    
    <body>
    <div class = "container text-center">
        <div class = "title">
            <h1>Pinterest Cntrl-C</h1>
            <a href = "/logout">Logout</a>
        <a href = "/profile">View Your Images</a>
        </div>
        <h2 class = "pagehead">Recent Images</h2>
        <div class = "grid">
        <% entries1 = images.map(function(elem) {
            console.log(elem.imgUrl);
    return '<div class = "grid-item"><img src="' + elem.imgUrl + '" onerror="imgError(this);"></img></div>';
}) -%>
<p><%- entries1.join("") %></p>
</div>

</div>
</body>


<script>

$(window).load(function() {
    $('.grid').masonry({
        columnWidth: 400,
        itemSelector: '.grid-item'
    }).imagesLoaded(function() {
            $('.grid').masonry('reload');
        });
});

function imgError(image) {
    image.onerror = "";
    image.src = "https://uos.edu.pk/assets/backend/images/staff/imagenotfound.svg";
    return true;
}

function asd(a)
{
    if(a==1)
    document.getElementById("asd").style.display="none";
    else {
    document.getElementById("asd").style.display="block";
    document.getElementById("addButton").style.display="none";
    }
}
</script>

